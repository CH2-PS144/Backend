// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Class {
  id        Int        @id @default(autoincrement())
  classId   String     @unique @db.Char(36)
  name      String     @db.VarChar(5)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Material  Material[]

  @@map("class")
}

model Material {
  id         Int        @id @default(autoincrement())
  materialId String     @unique @db.Char(36)
  name       String     @db.VarChar(70)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  classId    Int
  class      Class      @relation(fields: [classId], references: [id])
  Question   Question[]

  @@map("material")
}

model Question {
  id         Int      @id @default(autoincrement())
  questionId String   @unique @db.Char(36)
  questions  String   @db.LongText
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  materialId Int
  material   Material @relation(fields: [materialId], references: [id])
  Answer     Answer[]

  @@map("question")
}

model Answer {
  id             Int      @id @default(autoincrement())
  answer         String   @unique @db.Char(36)
  questionAnswer String   @db.Char(2)
  active         Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  questionId     Int
  qestion        Question @relation(fields: [questionId], references: [id])

  @@map("answer")
}
